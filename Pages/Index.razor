<h1>BindToComponent_TypeChecked_WithMatchingProperties</h1>

<BindToComponent_TypeChecked_WithMatchingProperties @bind-Value="ParentValue" />

<ChildComponent_WithExplicitEventHandler OnClick="@IncrementWithEventArgs" />


@code {
    public int ParentValue { get; set; } = 42;

    private int counter;
    private void Increment() {
        System.Console.WriteLine("Incrementing inside Increment.");
        counter++;
    }

    private void IncrementWithEventArgs(EventArgs args)
    {
       System.Console.WriteLine("Incrementing inside IncrementWithEventArgs.");
        counter++; 
    }
}