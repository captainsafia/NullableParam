<BindToComponent_SpecifiesValueAndChangeEvent_WithMatchingProperties @bind-Value="ParentValue" @bind-Value:event="OnChanged" />

<h1>ChildComponent_WithLambdaEventHandler</h1>

<ChildComponent_WithLambdaEventHandler OnClick="@(e => { Increment(); })" />

